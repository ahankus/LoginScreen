<Window x:Class="LoginScreen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginScreen"
        mc:Ignorable="d"
        Title="Login Screen" Height="450" Width="800">
    <Grid>
        <Label FontSize="30" HorizontalAlignment="Center" FontWeight="Bold">Login</Label>
        <StackPanel>
            <TextBlock Height="40" HorizontalAlignment="Left" Width="65" Margin="100 150 600 5" Name="textBlock1" FontSize="30" VerticalAlignment="Top" Text="User"></TextBlock>
            <TextBlock Height="40" HorizontalAlignment="Left" Width="125" Margin="100 0 500 5" Name="textBlock2" FontSize="30" VerticalAlignment="Top" Text="Password"></TextBlock>
            <TextBox Height="40" HorizontalAlignment="Left" Width="300" Margin="250 -80 0 0" Name="textBoxUser" VerticalAlignment="Top"></TextBox>
            <PasswordBox Height="40" HorizontalAlignment="Left" Width="300" Margin="250 -40 0 0" Name="passwordBox" VerticalAlignment="Top"></PasswordBox>
            <Button Click="Login_Click" Height="40" Width="200" Margin="100 50 100 0" FontSize="25">Login</Button>

        </StackPanel>
    </Grid>
</Window>
